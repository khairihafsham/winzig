<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Winzig</title>
    <link rel="stylesheet"
          type="text/css"
          href="{{ url_for('static', filename='css/bootstrap.css') }}">
    <link rel="stylesheet"
          type="text/css"
          href="{{ url_for('static', filename='css/bootstrap-theme.css') }}">
    <link rel="stylesheet"
          type="text/css"
          href="{{ url_for('static', filename='css/app.css') }}">
    {% if url %}
    <script src="{{ url_for('static', filename='js/clipboard.min.js')}}"
            type="text/javascript"
            charset="utf-8"></script>
    <script src="{{ url_for('static', filename='js/app.js')}}"
            type="text/javascript"
            charset="utf-8"></script>
    {% endif %}
  </head>
  <body>
    <div id="top-bar"></div>
    <div class="container" id="main">
      <div class="col-sm-6 col-sm-offset-3">
        <h1 class="text-center header">
          <span class="header-lg">Shorten</span> URL!
        </h1>
        <br>
        {% if error %}
        <div class="alert alert-danger">
          <span class="glyphicon glyphicon-exclamation-sign"
                aria-hidden="true"></span>
          {{ error }}
        </div>
        {% endif %}

        {% if url %}
        <form>
          <div class="input-group">
            <input id="copyme" class="form-control" type="text" value="{{ url }}">
            <span class="input-group-btn">
              <button type="button"
                      data-clipboard-target="#copyme"
                      class="copy-btn btn btn-warning">
                <span class="glyphicon glyphicon-copy"
                      aria-hidden="true"></span>
                Copy
              </button>
            </span>
          </div>
        </form>
        {% else %}
        <form action="" method="POST">
          <div class="input-group">
            <input type="text"
                   class="form-control"
                   name="url"
                   placeholder="Enter URL here">
            <input type="hidden"
                   name="_csrf_token"
                   value="{{csrf_token()}}">
            <span class="input-group-btn">
              <button type="submit" class="btn btn-default">Submit</button>
            </span>
          </div>
        </form>
        {% endif %}
      </div>
    </div>
  </body>
</html>
